# Brewfile - Homebrew packages
# Install with: brew bundle --file=Brewfile

tap "homebrew/bundle"

# Core
brew "chezmoi"

# Shell & Terminal
brew "starship"       # Modern prompt
brew "grc"            # Generic colorizer
brew "zellij"         # Terminal multiplexer

# Git Tools
brew "gh"             # GitHub CLI
brew "git-delta"      # Better diffs

# Development
brew "fnm"            # Fast Node Manager
brew "direnv"         # Per-directory environment

# Databases
brew "postgresql@17"
brew "redis"
