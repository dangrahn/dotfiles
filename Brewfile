# Brewfile - Homebrew packages
# Install with: brew bundle --file=Brewfile

# Core
brew "chezmoi"
brew "jq"             # JSON processor

# Shell & Terminal
brew "starship"       # Modern prompt
brew "grc"            # Generic colorizer
brew "zellij"         # Terminal multiplexer

# Git Tools
brew "gh"             # GitHub CLI
brew "git-delta"      # Better diffs

# Development
brew "fnm"            # Fast Node Manager
brew "bun"            # JavaScript runtime & package manager
brew "direnv"         # Per-directory environment

# AI Coding Tools
brew "opencode"       # AI coding agent

# Databases
brew "postgresql@17"
brew "redis"

# Docker (installed via run_once_before_install-docker.sh)
